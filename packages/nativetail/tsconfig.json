{
	"compilerOptions": {
		"strict": false,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"skipLibCheck": true,
		"rootDir": "./",
		"outDir": "./dist/esm",
		"lib": ["ES2019"],
		"target": "ES2019",
		"declaration": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"stripInternal": true
	},
	"exclude": ["./dist", "**/*.spec.ts"]
}
